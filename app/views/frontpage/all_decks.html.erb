<h1>Welcome to Flashcards!</h1>
<p><%= current_user.username.capitalize %>'s Decks</p>

<div class="row">
	<% @decks.each do |deck| %>
	<% if deck.user_id == current_user.id %>
	<div class="col-md-4">
		<div class="well">
			<strong>Deck Name: <%= deck.deck_name %></strong> <br/>
			<%= link_to 'Show Cards', cardsbydeck_path(deck_id: deck.id) %><br/>
			<%= link_to 'New Card', new_card_path(deck_id: deck.id) %>
		</div>
	</div>
		<% end %>
	<% end %>	
</div>

<h3>Create a new deck</h3>
<%= link_to 'New Deck', new_deck_path %>

