<%= form_with(model: card, local: true) do |form| %>
  <% if card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
      <% card.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  

  <div class="field">
    
    <% if @deck_id == nil %>
    <%= form.label :deck_id %>
    <%= form.number_field :deck_id %>
    <% else %>
    
    <%= form.hidden_field :deck_id, value: @deck_id %>
    
    <% end %>
  </div>

  <div class="field">
    <%= form.label :front %>
    <%= form.text_area :front %>
  </div>

  <div class="field">
    <%= form.label :back %>
    <%= form.text_area :back %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
